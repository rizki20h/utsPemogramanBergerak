<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@drawable/atas">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="570dp"
        android:background="@drawable/test">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kisah Nabi Muhammad"
                android:textSize="40dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed-medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Nabi Muhammad S.A.W adalah Nabi terakhir yang tertulis dalam 25 nabi dan rasul. beliau lahir pada 571 masehi, pada tahun gajah. dinamakan tahun gajah karena Pasukan Yaman dibawah Abrahah ingin menghancurkan Ka'bah saat itu. namun digagalkan oleh sekumpulan Burung Ababil yang diutus oleh Allah. Ayahnya, Abdullah telah wafat disaat Nabi SAW masih kecil. lalu ibunya, Aminah wafat saat perjalanan di Abwa' pada umur Nabi SAW masih 6 tahun. Lalu Nabi SAW hidup bersama kakeknya, Abdul Muthalib dan belajar menggembala domba. namun ketika Nabi berumur 8 tahun, Abdul Muthalib wafat."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Nabi Muhammad kemudian hidup bersama sang paman, Abu Thalib. disaat itulah ia sering dibawa ke Syam untuk berdagang, hingga pendeta Bukhaira menyuruh Abu Thalib untuk menjaga Muhammad kecil, karena Bukhaira yakin Muhammad akan menjadi rasul terakhir. setelah itu, pada umur 25 tahun, Nabi SAW menikah dengan seorang wanita berumur 40 tahun bernama Siti Khadijah. lalu pada umurnya 40 tahun, Nabi Muhammad diangkat menjadi nabi, yang disaat itu dibacakan wahyu oleh Malaikat Jibril yang sekarang terdapat pada surat Al-Alaq 1-5. lalu terjadilah peristiwa Isra Mir'aj, yang dimana Nabi Muhammad SAW dibawa oleh kendaraan Buraq menuju langit, dan melihat para nabi sebelum beliau, dan Surga dan Neraka."/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@drawable/atas">
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:id="@+id/nextMuhammad"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="15dp"
            android:text="Next"
            android:background="@drawable/button1"
            android:layout_marginRight="50dp"/>
    </LinearLayout>



</LinearLayout>