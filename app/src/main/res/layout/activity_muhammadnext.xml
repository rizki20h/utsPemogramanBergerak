<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".muhammadnext">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@drawable/atas">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="570dp"
        android:background="@drawable/test">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kisah Nabi Muhammad"
                android:textSize="40dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed-medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Setelah itu, beliau lanjut berdakwah, banyak goyahan dilakukan oleh Kaum Quraisy di Mekah sehingga banyak terjadi perang antara kaum muslimin dan kaum Quraisy. hingga Nabi beserta pengikutnya hijrah ke Yastrib atau Madinah saat ini. pada akhirnya, pada 630 Masehi, 10.000 kaum muslimin melaksanakan Fathul Makkah atau penaklukan Mekkah, dan Mekah ditaklukan tanpa sebercak pun darah nan tumpah saat itu."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Nabi Muhammad SAW wafat pada 632 masehi, pada umur 63 tahun."/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@drawable/atas">
    </LinearLayout>

</LinearLayout>